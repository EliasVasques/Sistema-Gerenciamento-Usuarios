<!DOCTYPE html>
<html lang="pt-br">
    <%- include('./partes/head.ejs') %>
    <%- include('./partes/menu-top.ejs') %>

    <a class="btn btn-primary" href="/usuarios/add" role="button">Novo Usuario</a>
    <body>
      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Sexo</th>
            <th scope="col">Status</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% usuarios.forEach(usuario => { %>
            <tr>
                <th scope="row">1</th>
                <td><%= usuario.nome %></td>
                <td><%= usuario.email %></td>
                <td><%= usuario.sexo %></td>
                <td><%= usuario.status %></td>
                <td class="acoes"> 
                  <a href="/usuarios/editar/<%= usuario._id %>"><i class="icon-edit"></i></a>
                  <form method="POST" action="/usuarios/deletar/<%= usuario._id %>?_method=DELETE" class="butao-form">
                    <button type="submit" class="icon-trash"></button>
                  </form>
                </td>
              </tr>
          <% })%>
        </tbody>
      </table>
      
        

      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </body>
</html>